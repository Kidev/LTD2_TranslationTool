{
	"name": "LTD2 Translation Tool",
	"manifest_version": 3,
	"version": "1.2",
	"description": "Adds cool quality of life features to Google Sheet to help translators of Legion TD 2",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"32": "icon/icon-32.png",
		"48": "icon/icon-48.png"
	},
	"action": {
		"default_title": "Toggle Coach's Translation Tool for current tab",
		"default_icon": "icon/icon-48.png"
	},
	"content_scripts": [{
		"matches": ["https://docs.google.com/spreadsheets/*"],
		"css": ["inject.css", "css/btf.css", "css/black-dashboard.css", "css/flag-icon.css", "css/style.css", "css/theme.css", "css/empty.css"],
		"js": ["inject.js"]
	}],
	"web_accessible_resources": [{
		"resources": ["preview_box.html"],
		"matches": ["<all_urls>"]
	},{
		"resources": ["fonts/*.woff2"],
		"matches": ["<all_urls>"]
	}]
}